<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<TextView 
    android:id="@+id/notifications_text"
    android:text="@string/notifications_text"
    android:textSize="20dp"
    android:layout_marginTop="20dp"
    android:gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />
    />

<TimePicker
    android:id="@+id/timePicker1"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:background="@android:color/darker_gray"/>

<TextView 
    android:id="@+id/ratingstars_number"
    android:text="@string/ratingstars_number"
    android:gravity="center_horizontal"
    android:textSize="20dp"
    android:layout_marginTop="20dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />
    />
<Spinner
    android:id="@+id/ratingstars_spinner"
    android:gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />

 <Button android:id="@+id/apply_settings_button" 
    android:layout_width="fill_parent" 
    android:layout_height="70dp" 
    android:layout_marginTop="135dp"
    android:text="Apply Settings"
    android:textColor="#ffffff" 
    android:background="@layout/blue_button_background"
    android:textSize="20dp"
    />


</LinearLayout>
