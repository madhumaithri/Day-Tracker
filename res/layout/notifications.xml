<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<TextView 
    android:id="@+id/notifications_number"
    android:text="@string/notifications_number"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    />
<Spinner
    android:id="@+id/notifications_spinner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<TextView 
    android:id="@+id/ratingstars_number"
    android:text="@string/ratingstars_number"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    />
<Spinner
    android:id="@+id/ratingstars_spinner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

</LinearLayout>
