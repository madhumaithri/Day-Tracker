<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/description"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description of the event"
        android:layout_gravity="center"
        android:textSize="20dp" />
    
    <EditText
        android:id="@+id/mydayNoteInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginBottom="20dp"
        android:hint="@string/myday_notes"
        android:inputType="textMultiLine" />
    
    <TextView
        android:id="@+id/time"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time of the event"
        android:layout_gravity="center"
        android:textSize="20dp" />
    
    <EditText
        android:id="@+id/timeNoteInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginBottom="20dp"
        android:hint="@string/myday_notes"
        android:inputType="textMultiLine" />
    
	 <TextView
        android:id="@+id/people"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People you were with"
        android:layout_gravity="center"
        android:textSize="20sp" />
    
    <EditText
        android:id="@+id/peopleInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginBottom="20dp"
        android:hint="@string/myday_notes"
        android:inputType="textMultiLine" />
    
    
</LinearLayout>
